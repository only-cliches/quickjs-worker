{
  "name": "quickjs-vm",
  "version": "0.2.0",
  "description": "Run a QuickJS worker from NodeJS",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "cargo-cp-artifact -nc index.node -- cargo build --message-format=json-render-diagnostics",
    "build-debug": "npm run build --",
    "build-release": "npm run build -- --release",
    "install": "npm run build-release",
    "test": "cargo test && jest"
  },
  "keywords": [
    "quickjs",
    "vm",
    "sandbox",
    "nodejs",
    "javascript",
    "es6",
    "eval",
    "bytecode",
    "worker",
    "secure",
    "untrusted",
    "memory-limit",
    "isolate",
    "runtime",
    "async",
    "synchronous",
    "promises"
  ],
  "author": "me@scottlott.com",
  "license": "MIT",
  "dependencies": {
    "cargo-cp-artifact": "^0.1.9",
    "quickjs-emscripten": "^0.31.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^25.0.3",
    "fast-check": "^4.5.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/only-cliches/quickjs-worker.git"
  },
  "bugs": {
    "url": "https://github.com/only-cliches/quickjs-worker/issues"
  },
  "homepage": "https://github.com/only-cliches/quickjs-worker#readme"
}
